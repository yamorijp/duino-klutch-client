@require "_vars.styl"
@require "_util.styl"

html
  height 100%

body
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-family 'Open Sans', sans-serif;
  font-size $primary-size
  color $primary
  background url("/static/img/blur.jpg") $theme-color-light no-repeat center center
  background-size cover

h1, h2, h3, h4, h5
  font-size $primary-size
  font-weight 600
  padding 0
  margin 1em 0
  white-space nowrap

h1, h2
  font-weight 700

small
  font-weight lighter

a
  color $primary
  text-decoration none
  &:hover
  &:focus
    color lighten($primary, 16)

.link
  cursor pointer
  color $accent
  &:hover
  &:focus
    color lighten($accent, 16)

.text-display
  text-align center
  font-size 24px
  font-weight 700

.transparent, .transparent:focus
  background-color transparent
  border-color transparent
  color inherit

.transparent:hover, .transparent:active
  background-color rgba(250,250,250,.1)
  border-color transparent
  color lighten($primary, 16)

.transparent:disabled
.transparent:disabled:focus
  background-color transparent
  border-color transparent
  color darken($primary, 16)
  &:hover
  &:active
    background-color transparent
    border-color transparent
    color darken($primary, 16)

.el-input__inner
.el-textarea__inner
.el-button
.el-popover
.el-message
  border-radius 1px

.el-input-group__append
  border-radius 0 1px 1px 0

.el-button
  font-size smaller

.el-footer
  opacity .3
  text-align right
  font-size smaller
  font-weight 300
  margin-top 20px
  padding-top 20px
  transition opacity .3s
  &:hover
    opacity 1
  .github
    vertical-align middle

button
  text-transform uppercase

.el-form-item__label
  font-size smaller
  text-transform uppercase
  color $primary

.el-popover
  min-width 280px
  background-color #f0f0f6
  .el-form-item__label
    color $primary-dark

.el-tabs__item
  color $primary
  font-size $primary-size

.el-input, .el-textarea
  max-width 400px

.el-col
  padding 1em

.el-color-picker__trigger
.el-color-picker__color
  border 0

.el-color-picker
  border 0
  height 30px
  display block

.color-input .el-input-group__append
  padding 0 10px

.panels
  padding 0
  margin 0
  display flex
  flex-flow row wrap
  align-items stretch
  align-content center

.panel
  text-align center
  color #eee
  margin 0 5px 5px 0
  flex-grow 1
  display flex
  flex-direction column
  justify-content center
  align-items center
  height 100px
  width 100px
  min-width 100px
  min-height 100px
  box-shadow 0 1px 5px 0 rgba(0,0,0,0.15)

.panel-inner
  width 100%
  height 100%
  background-color rgba(250, 250, 250, .05)
  position relative

.panel-inner.clickable
  background-color rgba(250, 250, 250, .15)
  cursor pointer

.panel-inner.clickable:hover
  background-color rgba(250, 250, 250, .25)

.panel-inner.next
  background-image linear-gradient(-135deg, #c0c0f0 6px, transparent 0)

.panel-content
  font-weight bolder
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  position absolute
  top 45%
  left 50%
  transform translateY(-50%) translateX(-50%)

.panel-title
  font-size smaller
  font-weight lighter
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  position absolute
  bottom 20px
  width 100%
  text-align center

.tool
  padding 1em

.tool-button
  margin 8px 0 5px 5px

@media (max-width $media-lg)
  .el-header
  .el-main
    padding-left 0
    padding-right 0

@media (max-width $media-md)
  .el-col-8
    width 100%
  .el-popover
    right initial

@media (max-width $media-sm)
  .el-popover
    left 8px
    right 8px
  .tool
    padding-left 0
    padding-right 0
